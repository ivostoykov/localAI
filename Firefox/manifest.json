{
  "manifest_version": 2,
  "name": "Local AI helper",
  "version": "1.1.89",
  "description": "Use local AI resources.",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "scripting",
    "http://localhost/*",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Click me"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "jslib/stream_processor.js",
        "lai-main.js",
        "content.js",
        "lai-main.js"
      ],
      "css": [
        "sidebar.css",
        "button.css"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{9f6b4f8c-a2fe-46ba-b5f1-2a73aef9e4f5}",
      "strict_min_version": "89.0"
    }
  }
}